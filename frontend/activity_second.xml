<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".second"
    android:orientation="vertical"
    android:background="#78E3F1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/ll1"
        android:orientation="vertical"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/ll2"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll4"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll6"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:id="@+id/u1"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Type:"
                    android:id="@+id/t1"
                    android:textSize="30dp"
                    android:textColor="#000"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll7"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/st"
                    >
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ds"
                        android:text="Day Scholar"
                        android:textSize="20dp"
                        android:layout_marginTop="8dp"
                        />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/wb"
                        android:text="Weekly Boarder"
                        android:textSize="20dp"
                        android:layout_marginTop="8dp"
                        />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tb"
                        android:text="Term Boarder"
                        android:textSize="20dp"
                        android:layout_marginTop="8dp"
                        />


                </RadioGroup>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll5"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll8"
                android:layout_weight="1"
                android:gravity="right"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:id="@+id/t2"
                    android:textSize="30dp"
                    android:textColor="#000"
                    android:layout_marginRight="15dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll9"
                android:layout_weight="1"
                >

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/g"
                    >
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/female"
                        android:text="Female"
                        android:textSize="20dp"
                        android:layout_marginTop="8dp"
                        />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/male"
                        android:text="Male"
                        android:textSize="20dp"
                        android:layout_marginTop="8dp"
                        />

                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/ll3"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <Button
            android:id="@+id/nextb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:onClick="next_page"
            android:text="Next"
            tools:ignore="OnClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/backb"
            android:background="#fff"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>




</LinearLayout>
